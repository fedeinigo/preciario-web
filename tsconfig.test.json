{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": ".tmp/test-dist",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "verbatimModuleSyntax": false,
    "paths": {
      "@/*": ["src/*"],
      "next/dynamic": ["tests/mocks/next-dynamic"],
      "next/navigation": ["tests/mocks/next-navigation"],
      "next-auth/react": ["tests/mocks/next-auth-react"],
      "@testing-library/react": ["tests/mocks/testing-library-react"],
      "@testing-library/user-event": ["tests/mocks/testing-library-user-event"],
      "@/app/components/ui/Modal": ["tests/mocks/modal"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules", ".next"]
}
